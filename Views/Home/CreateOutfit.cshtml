@model List<WebApplication1.Models.Cloth>

@{
    ViewData["Title"] = "Create Outfit";
}

<h2 class="mb-3">Create New Outfit</h2>

<form asp-action="CreateOutfit" method="post">
    <div class="mb-3">
        <label for="name" class="form-label">Outfit Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="e.g., Summer Look" required />
    </div>

    <h4>Select Clothes to Include</h4>
    <div class="row">
        @foreach (var cloth in Model)
        {
            <div class="col-md-3 col-sm-4 col-6 mb-4 text-center">
                <div class="card h-100">
                    @if (cloth.ImagePaths.Count > 0)
                    {
                        <img src="@cloth.ImagePaths[0]" class="card-img-top" style="height:150px; object-fit:cover;" />
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height:150px;">
                            <span>No Image</span>
                        </div>
                    }

                    <div class="card-body">
                        <h6 class="card-title">@cloth.Name</h6>
                        <p class="text-muted small">@cloth.Category</p>
                        <div class="form-check text-center">
                            <input class="form-check-input" type="checkbox" name="selectedClothIds" value="@cloth.Id" id="cloth_@cloth.Id" />
                            <label class="form-check-label" for="cloth_@cloth.Id">Select</label>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
     <div class="d-flex gap-2">
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Outfits" class="btn btn-secondary">Cancel</a>
    </div>
</form>
@section Scripts {
    <script>
        // client-side guard: ensure at least 2 selected
        document.querySelector("form").addEventListener("submit", function (e) {
            const count = document.querySelectorAll("input[name='selectedClothIds']:checked").length;
            if (count < 2) {
                alert("Please select at least 2 clothing items for an outfit.");
                e.preventDefault();
            }
        });
    </script>
    }