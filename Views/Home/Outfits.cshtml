@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Outfits";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Outfits</h2>
        <a asp-action="CreateOutfit" class="btn btn-success">+ Create New Outfit</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No outfits have been created yet. Click <strong>Create New Outfit</strong> to get started!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">
                            <h4 class="card-title">@item.Outfit.Name</h4>
                            <hr />
                            <div class="d-flex flex-wrap">
                                @foreach (var cloth in item.Clothes)
                                {
                                    var imageUrl = cloth.ImagePaths != null && cloth.ImagePaths.Count > 0
                                        ? cloth.ImagePaths[0]
                                        : "/images/no-image.png"; // fallback image

                                    <div class="m-1 text-center">
                                        <img src="@imageUrl"
                                             alt="@cloth.Name"
                                             class="img-thumbnail"
                                             style="width: 100px; height: 100px; object-fit: cover;" />
                                        <div class="small text-muted">@cloth.Name</div>
                                    </div>
                                }
                            </div>

                            <div class="mt-3 d-flex justify-content-between">
                                <a asp-action="EditOutfit"
                                   asp-route-id="@item.Outfit.Id"
                                   class="btn btn-primary btn-sm">Edit</a>

                                <form asp-action="DeleteOutfit"
                                      asp-route-id="@item.Outfit.Id"
                                      method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this outfit?');"
                                      style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
